<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/medium"
    android:background="@drawable/click_effect"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:elevation="@dimen/elevation"
    android:padding="@dimen/medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium">

            <ImageView
                android:id="@+id/iv_settings"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="@dimen/xxsmall"
                android:alpha="0.5"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/content_description"
                android:src="@drawable/ic_settings"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/BigTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/small"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_settings"
                app:layout_constraintRight_toLeftOf="@id/tv_points"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Paquito" />

            <TextView
                android:id="@+id/tv_points"
                style="@style/BigTextView_Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/xxsmall"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="79" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_small"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/ll_points_ko"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@drawable/click_effect"
                android:backgroundTint="@color/light_red"
                android:elevation="@dimen/elevation"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/large"
                android:paddingVertical="@dimen/small">

                <TextView
                    android:id="@+id/tv_points_ko"
                    style="@style/BigTextView_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="-2" />

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05" />

            <LinearLayout
                android:id="@+id/ll_points_ok_extra"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@drawable/click_effect"
                android:backgroundTint="@color/light_green"
                android:elevation="@dimen/elevation"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/large"
                android:paddingVertical="@dimen/small">

                <TextView
                    style="@style/BigTextView_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/xxxsmall"
                    android:text="@string/room_points_plus" />

                <TextView
                    android:id="@+id/tv_points_ok_extra"
                    style="@style/BigTextView_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2" />

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05" />

            <LinearLayout
                android:id="@+id/ll_points_ok_base"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@drawable/click_effect"
                android:backgroundTint="@color/light_green"
                android:elevation="@dimen/elevation"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/large"
                android:paddingVertical="@dimen/small">

                <TextView
                    style="@style/BigTextView_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/xxxsmall"
                    android:text="@string/room_points_plus" />

                <TextView
                    android:id="@+id/tv_points_ok_base"
                    style="@style/BigTextView_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="4" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/ll_points_ko_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@drawable/click_effect"
                android:backgroundTint="@color/light_red"
                android:elevation="@dimen/elevation"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/large"
                android:paddingVertical="@dimen/small">

                <TextView
                    android:id="@+id/tv_points_ko_two"
                    style="@style/BigTextView_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="-4" />

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05" />

            <LinearLayout
                android:id="@+id/ll_points_ok_extra_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@drawable/click_effect"
                android:backgroundTint="@color/light_green"
                android:elevation="@dimen/elevation"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/large"
                android:paddingVertical="@dimen/small">

                <TextView
                    style="@style/BigTextView_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/xxxsmall"
                    android:text="@string/room_points_plus" />

                <TextView
                    android:id="@+id/tv_points_ok_extra_two"
                    style="@style/BigTextView_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="6" />

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05" />

            <LinearLayout
                android:id="@+id/ll_points_ok_base_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@drawable/click_effect"
                android:backgroundTint="@color/light_green"
                android:elevation="@dimen/elevation"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/large"
                android:paddingVertical="@dimen/small">

                <TextView
                    style="@style/BigTextView_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/xxxsmall"
                    android:text="@string/room_points_plus" />

                <TextView
                    android:id="@+id/tv_points_ok_base_two"
                    style="@style/BigTextView_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="8" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>